@model Technocitt.Models.UserLoginModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}




<div class="div-center">


    <div class="content">

        <h3>Login</h3>
        <hr />
        <form asp-controller="Account" asp-action="Login">
            <div class="form-group">
                <label asp-for="Email">Email address</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <button type="submit" class="btn btn-primary">Login</button>


            <a asp-controller="Account" asp-action="Register">Register</a>
        </form>

    </div>


</div>
